CREATE TABLE IF NOT EXISTS
    ToDoItem(
        id INTEGER PRIMARY KEY NOT NULL,
        title VARCHAR(80) NOT NULL,
        description TEXT,
        priority INTEGER DEFAULT 2,
        deadline TEXT,
        isDone BOOLEAN CHECK (isDone IN (0, 1))
);

