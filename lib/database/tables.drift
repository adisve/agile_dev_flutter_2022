add_task: 
    INSERT INTO ToDoItem (title, description, priority, deadline, isDone)
    VALUES 
    (:title, :description, :priority, :deadline, :isDone);

delete_task:
    DELETE FROM ToDoItem WHERE id = :id);

update_task:
    UPDATE ToDoItem
    SET title = :title, description = :description, priority = :priority, deadline = :deadline, isDone = :isDone
    WHERE id = :id;

fetch_tasks:
    SELECT * FROM ToDoItem;